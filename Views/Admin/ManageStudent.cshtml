@model IEnumerable<Topscholars.Models.StudentModel>

@{
    ViewBag.Title = "Manage Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Student</h2>

<p>
    @Html.ActionLink("Create New", "EditStudent", null, new { @class = "btn btn-success" })
    &nbsp;
    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-secondary" })
</p>
<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10" style="overflow-y:auto;">
        <table class="dataTable table table-striped hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Programme)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RollNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DOB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AdmissionDate)
                </th>
                <th colspan="3">Actions</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Programme)
                    </td>
                    <td>
                        @if (item.RollNumber > 0)
                        {
                            @item.RollNumber.ToString("0.##");
                        }
                    </td>
                    <td>
                        @if (item.ContactNumber > 0)
                        {
                            @item.ContactNumber.ToString("0.##");
                        }
                    </td>
                    <td>
                        @if (item.DOB != null)
                        {
                            @item.DOB.ToString("d-MMMM-yyyy");
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @if (item.AdmissionDate != null)
                        {
                            @item.AdmissionDate.ToString("d-MMMM-yyyy");
                        }
                    </td>
                    <td class="Action">
                        <a class="btn btn-primary" href="@Url.Action("EditStudent","Admin")?id=@item.ID"><i class="fa-solid fa-pen"></i> Edit</a>
                    </td>
                    <td class="Action">
                        <a class="btn btn-info" href="@Url.Action("ViewStudents","Admin")?id=@item.ID"><i class="fa-solid fa-circle-info"></i> Details</a>
                    </td>
                    <td class="Action">
                        <a class="btn btn-danger" href="@Url.Action("DeleteStudent","Admin")?id=@item.ID"><i class="fa-solid fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="col-sm-1"></div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var message = "@TempData["Message"]";
        if (message == "Created") {
            console.log(message);
            Swal.fire({
                title: "Student Added",
                icon: "success"
            });
        }
        else if (message == "Updated") {
            console.log(message);
            Swal.fire({
                title: "Student Updated",
                icon: "success"
            });
        }
        else if (message == "Deleted") {
            console.log(message);
            Swal.fire({
                title: "Student Deleted",
                icon: "success"
            });
        }
    });
</script>
