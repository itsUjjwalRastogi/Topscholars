@model IEnumerable<Topscholars.Models.Programme>

@{
    ViewBag.Title = "Manage Programme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Programme</h2>

<p>
    @Html.ActionLink("Create New", "EditProgramme", null, new { @class = "btn btn-success" })
    &nbsp;
    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-secondary" })
</p>
<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10" style="overflow-y:auto;">
        <table class="dataTable table table-striped hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProgrammeName)
                </th>
                <th colspan="2">
                    Actions
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProgrammeName)
                    </td>
                    <td class="Action">
                        <a class="btn btn-primary" href="@Url.Action("EditProgramme","Admin")?id=@item.ProgrammeId"><i class="fa-solid fa-pen"></i> Edit</a>
                    </td>
                    <td class="Action">
                        <a class="btn btn-danger" href="@Url.Action("DeleteProgramme","Admin")?id=@item.ProgrammeId"><i class="fa-solid fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="col-sm-1"></div>
</div>
<script type="text/javascript">

    $(document).ready(function () {
        var message = "@TempData["Message"]";
        if (message == "Created") {
            console.log(message);
            Swal.fire({
                title: "Programme Added",
                icon: "success"
            });
        }
        else if (message == "Updated") {
            console.log(message);
            Swal.fire({
                title: "Programme Updated",
                icon: "success"
            });
        }
        else if (message == "Deleted") {
            console.log(message);
            Swal.fire({
                title: "Programme Deleted",
                icon: "success"
            });
        }
        else if (message == "DeleteError") {
            console.log(message);
            Swal.fire({
                title: "Some courses are assigned to this programme",
                icon: "error"
            });
        }
    });
</script>

