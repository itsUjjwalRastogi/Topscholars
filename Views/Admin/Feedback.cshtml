@model IEnumerable<Topscholars.Models.Feedback>

@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Feedback</h2>

<p>
    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-secondary" })
</p>
<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10" style="overflow-y:auto;">
        <table class="dataTable table table-striped hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FeedbackText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateSubmitted)
                </th>
                <th colspan="2">
                    Actions
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FeedbackText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateSubmitted)
                    </td>
                    <td class="Action">
                        <a class="btn btn-success" href="@Url.Action("ProcessedFeedback","Admin")?id=@item.FeedbackId"><i class="fa-solid fa-check-to-slot"></i> Process</a>
                    </td>
                    <td class="Action">
                        <a class="btn btn-danger" href="@Url.Action("DeleteFeedback","Admin")?id=@item.FeedbackId"><i class="fa-solid fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="col-sm-1"></div>
</div>
<script type="text/javascript">

    $(document).ready(function () {
        var message = "@TempData["Message"]";
        if (message == "Updated") {
            console.log(message);
            Swal.fire({
                title: "Feedback Processed",
                icon: "success"
            });
        }
        else if (message == "Deleted") {
            console.log(message);
            Swal.fire({
                title: "Feedback Deleted",
                icon: "success"
            });
        }
    });
</script>

