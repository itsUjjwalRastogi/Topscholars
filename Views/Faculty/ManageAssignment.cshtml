@model IEnumerable<Topscholars.Models.Assignments>

@{
    ViewBag.Title = "Manage Assignment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Assignment</h2>

<p>
    @Html.ActionLink("Create New", "EditAssignment", null, new { @class = "btn btn-success" })
    &nbsp;
    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-secondary" })
</p>
<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10" style="overflow-y:auto;">
        <table class="dataTable table table-striped hover">
            <tr>
                <th>
                    Submission
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DueDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.CourseName)
                </th>
                <th colspan="2">Actions</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="Action">
                        <a class="btn btn-info" href="@Url.Action("CheckSubmission","Admin")?id=@item.AssignmentId">Check Submissions</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @if (item.DueDate != null)
                        {
                            @item.DueDate.ToString("d-MMMM-yyyy");
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Courses.CourseName)
                    </td>
                    <td class="Action">
                        <a class="btn btn-primary" href="@Url.Action("EditAssignment","Faculty")?id=@item.AssignmentId"><i class="fa-solid fa-pen"></i> Edit</a>
                    </td>
                    <td class="Action">
                        <a class="btn btn-danger" href="@Url.Action("DeleteAssignment","Faculty")?id=@item.AssignmentId"><i class="fa-solid fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="col-sm-1"></div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var message = "@TempData["Message"]";
        if (message == "Created") {
            console.log(message);
            Swal.fire({
                title: "Assignment Added",
                icon: "success"
            });
        }
        else if (message == "Updated") {
            console.log(message);
            Swal.fire({
                title: "Assignment Updated",
                icon: "success"
            });
        }
        else if (message == "Deleted") {
            console.log(message);
            Swal.fire({
                title: "Assignment Deleted",
                icon: "success"
            });
        }
    });
</script>
